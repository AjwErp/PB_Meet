                        </tr>
                        <tr>
                            <th scope="row" colspan="3">@Localizer["Account Manager"]</th>
                            <th colspan="4">@Localizer["D.G.M"]</th>
                            <th colspan="3">@Localizer["G.M"]</th>
                        </tr>
                        <tr>
                            <td colspan="5">
                                @Localizer["Signature"]:
                                <input type="text" id="txtpmsign" name="txtpmsign" value="@teswp.SignPManager" class="form-control" />
                                @Localizer["Remarks"]:
