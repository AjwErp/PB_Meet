@*----------Header Code for this Page--------------------------------Start-------------------Header------------------*@
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = "DailyMonthlyYearlyAuditAccountsReportsListRepository";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}

@*----------Header Code for this Page--------------------------------Ended-------------------Header------------------*@

@*----------Body Code for this Page----------------------------------Start---------------------Body----------------*@
<br />
<body>
    <div class="container-fluid backgroundWhiteBorder10Padding">
        <div class="row">
            <div class="header col-sm-12">
                <a class="logo font-weight-bold">@Localizer["Accounts Audit Reports List"]</a>
            </div>

            @*-----------1-------------start---------------------------- Table for Daily Accounts Reports Repository List----------------------------------------------------------*@

            <form class="tabled col-sm-12">
                <hr />
                <div class="col-sm-12 text-right">
                    <a type="button" class="btn btn-primary" asp-area="Account" asp-controller="" asp-action=""><i class="fas fa-plus"> @Localizer["Create New Accounts Six Month Audit Report"]</i> </a>
                </div>
                <div class="col-sm-12 text-center">
                    <a class="titleAccountofficeReport" scope="col" colspan="10">@Localizer["Accounts Six Month Audit Report List"]</a>
                </div>
                <br />
                <table class="table table-bordered SubH" id="DARReport">
                    <thead>
                        <tr class="Subhdr">

                            <th>@Localizer["Action"] </th>

                            <th>@Localizer["Date"]</th>
                            <th>@Localizer["Title"]</th>

                            <th>@Localizer["ID#"]</th>

                        </tr>
                    </thead>
                    <tbody>


                        <tr class="tabbody">
                            <td class="actionbtn">
                                <div class="btn-group">
                                    <button class="btn btn-primary btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        @Localizer["Action"]
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-edit"></i> @Localizer["View"]</a>
                                        <a class="dropdown-item" asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-list-alt"></i> @Localizer["Edit"]</a>
                                        <a class="dropdown-item" asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-trash-alt"></i> @Localizer["Delete"]</a>
                                        <a class="dropdown-item" asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-upload"></i> @Localizer["Upload to Repository"]</a>
                                        <a class="dropdown-item" asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-upload"></i> @Localizer["Upload to DMS"]</a>
                                    </div>
                                </div>
                            </td>
                            <td></td>
                            <td>@Localizer["Accounts Six Month Audit Report"] </td>
                            <td></td>
                        </tr>
                    </tbody>
                </table>

                @*------------------------ended---------------------------- Table for Daily Accounts Reports Repository List----------------------------------------------------------*@

                @*------------------------start---------------------------- Table for Monthly Accounts Reports Repository  List----------------------------------------------------------*@

                <hr />
                <div class="col-sm-12 text-right">
                    <a type="button" class="btn btn-primary" asp-area="Account" asp-controller="AccountReportPdf" asp-action="DailyReportPdf"><i class="fas fa-plus"> @Localizer["Create New Accounts Yearly Audit Report"]</i> </a>
                </div>
                <div class="col-sm-12 text-center">
                    <a class="titleAccountofficeReport" scope="col" colspan="10">@Localizer["Accounts Yearly Audit Report List"]</a>
                </div>
                <br />
                <table class="table table-bordered SubH" id="MARReport">
                    <thead>
                        <tr class="Subhdr">

                            <th>@Localizer["Action"] </th>

                            <th>@Localizer["Date"]</th>
                            <th>@Localizer["Title"]</th>

                            <th>@Localizer["ID#"]</th>

                        </tr>
                    </thead>
                    <tbody>


                        @*@foreach (var item in Model)
                            {*@

                        <tr class="tabbody">
                            <td class="actionbtn">
                                <div class="btn-group">
                                    <button class="btn btn-primary btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        @Localizer["Action"]
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-edit"></i> @Localizer["View"]</a>
                                        <a class="dropdown-item" asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-list-alt"></i> @Localizer["Edit"]</a>
                                        <a class="dropdown-item" asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-trash-alt"></i> @Localizer["Delete"]</a>
                                        <a class="dropdown-item" asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-upload"></i> @Localizer["Upload to Repository"]</a>
                                        <a class="dropdown-item" asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-upload"></i> @Localizer["Upload to DMS"]</a>
                                    </div>
                                </div>
                            </td>
                            <td></td>
                            <td>@Localizer["Accounts Yearly Audit Report"] </td>
                            <td></td>
                        </tr>
                    </tbody>
                </table>

                @*------------------------ended---------------------------- Table for Monthly Accounts Reports Repository  List----------------------------------------------------------*@


                @*------------------------start---------------------------- Table for Yearly Accounts Reports Repository  List----------------------------------------------------------*@

            </form>
        </div>
    </div>
</body>
<br />
@*----------Body Code for this Page----------------------------------Ended---------------------Body----------------*@

