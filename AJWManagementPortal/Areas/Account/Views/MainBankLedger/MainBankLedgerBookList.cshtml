@model AJWManagementPortal.Models.ViewModels.MainBankLedgerBookListViewModel
@*----------Header Code for this Page--------------------------------Start-------------------Header------------------*@
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
    ViewData["Title"] = "MainBankLedgerBookList";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}

<br />
<body>
    <div class="container-fluid backgroundWhiteBorder10Padding">
        <div class="row">
            <div class="header col-sm-12">
                <br />
                <a class="logo font-weight-bold font-weight-bolder">@Localizer["Main Bank Ledger Book Reports List"]</a>
            </div>

            <form class="tabled col-sm-12">
                <hr />
                <div class="col-sm-12 Createbtn">
                    <a type="button" class="btn btn-primary" asp-area="Account" asp-controller="MainBankLedger" asp-action="MonthlyMainBankLedgerBook"><i class="fas fa-plus"> @Localizer["Create New Monthly Main Bank Account Ledger"]</i> </a>
                </div>
                <br />
                <div class="col-sm-12 text-center">
                    <a class="titleAccountofficeReport" scope="col" colspan="10">@Localizer["Monthly Main Bank Account Ledger-Account Office"]</a>
                </div>
                <br />
                <table class="table table-bordered" id="MMBLBook">
                    <thead>
                        <tr class="Subhdr SubH">
                            <th>@Localizer["ID#"]</th>
                            <th>@Localizer["Action"] </th>
                            <th>@Localizer["Date"]</th>
                            <th>@Localizer["Title"]</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.MonthlyMainBankLedgerBook)
                        {
                            <tr>
                                <td class="text-center" scope="col">@item.MainBankDailyCashId</td>
                                <td class="actionbtn">
                                    <div class="btn-group">
                                        <button class="btn btn-primary btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            @Localizer["Action"]
                                        </button>
                                        <div class="dropdown-menu">
                                            <a class="dropdown-item" asp-action="ViewMonthlyMainBankLedgerBook" asp-route-Id="@item.MainBankDailyCashDate.ToString("yyyy-MM-dd")" asp-route-hide="true"><i class="fas fa-list-alt"></i> @Localizer["View"]</a>
                                        </div>
                                    </div>
                                </td>
                                <td class="text-center" scope="col">@item.MainBankDailyCashDate.ToString("MMMM") - @Convert.ToDateTime(@item.MainBankDailyCashDate).Year </td>
                                <td class="text-center" scope="col">Monthly Main Bank Ledger report</td>
                            </tr>
                        }
                    </tbody>
                </table>

                <hr />
                <div class="col-sm-12 Createbtn">
                    <a type="button" class="btn btn-primary" asp-area="Account" asp-controller="MainBankLedger" asp-action="YearlyMainBankLedgerBook"><i class="fas fa-plus"> @Localizer["Create New Yearly Main Bank Account Ledger"]</i> </a>
                </div>
                <br />
                <div class="col-sm-12 text-center">
                    <a class="titleAccountofficeReport" scope="col" colspan="10">@Localizer["Yearly Main Bank Account Ledger-Account Office"]</a>
                </div>
                <br />
                <table class="table table-bordered" id="YMBLBook">
                    <thead>
                        <tr class="Subhdr SubH">
                            <th>@Localizer["ID#"]</th>
                            <th>@Localizer["Action"] </th>
                            <th>@Localizer["Date"]</th>
                            <th>@Localizer["Title"]</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model.YearlyMainBankLedgerBook)
                        {
                            <tr>
                                <td class="text-center" scope="col">@item.MainBankDailyCashId</td>
                                <td class="actionbtn">
                                    <div class="btn-group">
                                        <button class="btn btn-primary btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            @Localizer["Action"]
                                        </button>
                                        <div class="dropdown-menu">
                                            <a class="dropdown-item" asp-action="ViewYearlyMainBankLedgerBook" asp-route-Id="@item.MainBankDailyCashDate.ToString("yyyy-MM-dd")" asp-route-hide="true"><i class="fas fa-list-alt"></i> @Localizer["View"]</a>
                                        </div>
                                    </div>
                                </td>
                                <td class="text-center" scope="col"> @Convert.ToDateTime(@item.MainBankDailyCashDate).Year </td>
                                <td class="text-center" scope="col">Yearly Main Bank Ledger report</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </form>
        </div>
    </div>
</body>
<a id="button"></a>

@section Scripts
{
    <script>
        $(document).ready(function () {
            $('#DMBLBook').DataTable({
                "sPaginationType": "full_numbers"
            });
        });

        $(document).ready(function () {
            $('#MMBLBook').DataTable({
                "sPaginationType": "full_numbers"
            });
        });

        $(document).ready(function () {
            $('#YMBLBook').DataTable({
                "sPaginationType": "full_numbers"
            });
        });
    </script>
}

