
@*----------Header Code for this Page--------------------------------Start-------------------Header------------------*@
@*this code is for language transalator inject localizer--------------*@
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
    ViewData["Title"] = "AccountsSupplierAllReport";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}
@*----------Header Code for this Page--------------------------------Ended-------------------Header------------------*@

@*----------Body Code for this Page----------------------------------Start---------------------Body----------------*@
@*This HTMl for ::Accounts Supplier All Reports List =View::*@
<br />
<body>

    <div class="container-fluid backgroundWhiteBorder10Padding">
        <div class="row">

            @*--------------------Start------------Daily Supplier Reports----------------------------------*@
            <div class="header col-sm-12">
                <br />
                <a class="logo font-weight-bold">@Localizer["Accounts Supplier Reports List"] </a>
            </div>
            <form class="tabled col-sm-12">
                <hr />
                <div class="col-sm-12 text-right">
                    <a type="button" class="btn btn-primary" asp-area="Account" asp-controller="DailyAccountReport" asp-action="DailyContinueReport"><i class="fas fa-plus"> @Localizer["Create New Daily Supplier Report"]</i> </a>
                </div>
                <br />
                <div class="col-sm-12 text-center">
                    <a class="titleAccountofficeReport" scope="col" colspan="10">@Localizer["Daily Supplier Accounts Report List-Account Office"]</a>
                </div>
                <br />
                <table class="table table-bordered SubH" id="DSReport">
                    <thead>
                        <tr class="Subhdr">
                            <th>@Localizer["Action"] </th>
                            <th>@Localizer["Date"]</th>
                            <th>@Localizer["Title"]</th>
                            <th>@Localizer["ID#"]</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="tabbody">
                            <td class="actionbtn">
                                <div class="btn-group">
                                    <button class="btn btn-primary btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        @Localizer["Action"]
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item " asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-list-alt"></i> @Localizer["View"]</a>
                                        <a class="dropdown-item " asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-user-edit"></i> @Localizer["Edit"]</a>
                                        <a class="dropdown-item " asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-trash-alt"></i> @Localizer["Delete"]</a>
                                        <a class="dropdown-item " asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-file-download"></i> @Localizer["Download"]</a>
                                    </div>
                                </div>
                            </td>
                            <td>@*@item.ValueDate*@ </td>
                            <td>@Localizer["Daily Supplier Report"] </td>
                            <td>@*@item.Id*@</td>
                        </tr>
                    </tbody>
                </table>

                @*--------------------ended------------Daily Supplier Reports----------------------------------*@

                @*--------------------sart------------Monthly Supplier Reports----------------------------------*@

                <hr />
                <br />
                <div class="col-sm-12 text-right">
                    <a type="button" class="btn btn-primary" asp-area="Account" asp-controller="DailyAccountReport" asp-action="DailyContinueReport"><i class="fas fa-plus"> @Localizer["Create New Monthly Supplier Report"]</i> </a>
                </div><br />
                <div class="col-sm-12 text-center">
                    <a class="titleAccountofficeReport" scope="col" colspan="10">@Localizer["Monthly Supplier Accounts Report List-Account Office"]</a>
                </div>
                <br />
                <table class="table table-bordered SubH" id="MSReport">
                    <thead>
                        <tr class="Subhdr">
                            <th>@Localizer["Action"] </th>
                            <th>@Localizer["Date"]</th>
                            <th>@Localizer["Title"]</th>
                            <th>@Localizer["ID#"]</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="tabbody">
                            <td class="actionbtn">
                                <div class="btn-group">
                                    <button class="btn btn-primary btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        @Localizer["Action"]
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item " asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-list-alt"></i> @Localizer["View"]</a>
                                        <a class="dropdown-item " asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-user-edit"></i> @Localizer["Edit"]</a>
                                        <a class="dropdown-item " asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-trash-alt"></i> @Localizer["Delete"]</a>
                                        <a class="dropdown-item " asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-file-download"></i> @Localizer["Download"]</a>
                                    </div>
                                </div>
                            </td>
                            <td>@*@item.ValueDate*@ </td>
                            <td>@Localizer["Monthly Supplier Report"] </td>
                            <td>@*@item.Id*@</td>
                        </tr>
                    </tbody>
                </table>

                @*--------------------ended------------Monthly Supplier Reports----------------------------------*@
                @*--------------------start------------Yearly Supplier Reports----------------------------------*@

                <hr />
                <br />
                <div class="col-sm-12 text-right">
                    <a type="button" class="btn btn-primary" asp-area="Account" asp-controller="DailyAccountReport" asp-action="DailyCashClosingReport"><i class="fas fa-plus"> @Localizer["Create New Yearly Supplier Report"]</i> </a>
                </div>
                <br />
                <div class="col-sm-12 text-center">
                    <a class="titleAccountofficeReport" scope="col" colspan="10">@Localizer["Yearly Supplier Accounts Report List-Account Office"]</a>
                </div>
                <br />
                <table class="table table-bordered SubH" id="YSReport">
                    <thead>
                        <tr class="Subhdr">
                            <th>@Localizer["Action"] </th>
                            <th>@Localizer["Date"]</th>
                            <th>@Localizer["Title"]</th>
                            <th>@Localizer["ID#"]</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="tabbody">
                            <td class="actionbtn">
                                <div class="btn-group">
                                    <button class="btn btn-primary btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        @Localizer["Action"]
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item " asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-list-alt"></i> @Localizer["View"]</a>
                                        <a class="dropdown-item " asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-user-edit"></i> @Localizer["Edit"]</a>
                                        <a class="dropdown-item " asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-trash-alt"></i> @Localizer["Delete"]</a>
                                        <a class="dropdown-item " asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-file-download"></i> @Localizer["Download"]</a>
                                    </div>
                                </div>
                            </td>
                            <td>@*@item.ValueDate*@ </td>
                            <td>@Localizer["Yearly supplier Report"] </td>
                            <td>@*@item.Id*@</td>
                        </tr>
                    </tbody>
                </table>
            </form>
            @*--------------------ended------------Yearly Supplier Reports----------------------------------*@
        </div>
    </div>
</body>
@*----------Body Code for this Page----------------------------------Ended---------------------Body----------------*@

@*----------JS for this Page-----------------------------------------Start---------------------JS----------------*@
@section Scripts{
    <script>
        $(document).ready(function () {
            $('#DSReport').DataTable({
                "sPaginationType": "full_numbers"
            });
        });

    </script>
    <script>
        $(document).ready(function () {
            $('#MSReport').DataTable({
                "sPaginationType": "full_numbers"
            });
        });

    </script>
    <script>
        $(document).ready(function () {
            $('#YSReport').DataTable({
                "sPaginationType": "full_numbers"
            });
        });

    </script>
}
@*----------JS for this Page-----------------------------------------Ended----------------------JS---------------*@

