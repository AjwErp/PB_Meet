@section Scripts{
    <script>
        $("body").ready(function () {
            const monthNames = ["January", "February", "March", "April", "May", "June",
                "July", "August", "September", "October", "November", "December"
            ];
            const date = new Date();
            $("#date").text(monthNames[date.getMonth()].concat("-", date.getFullYear()));

            var credit = 0, debit = 0;
            $("#tblcustomers TBODY TR").each(function () {
                var row = $(this);

                credit += parseInt(row.find("TD").eq(2).text());
                debit += parseInt(row.find("TD").eq(3).text());
            });

            $("#total #t2").append(credit);
            $("#total #t3").append(debit);
            $("#total #t5").append(credit - debit);
        });

        $("body").on("click", "#btnYearlyLedgerSave", function () {

            var yearlyGeneralLedgerBookList = new Array();
            $("#tblcustomers TBODY TR").each(function () {
                var AMSignature = $("#AMSignature");///
                var AMRemark = $("#AMRemark");///
                var DGMSignature = $("#DGMSignature");///
                var DGMRemark = $("#DGMRemark");///
                var GMSignature = $("#GMSignature");///
                var GMRemark = $("#GMRemark");///
                var row = $(this);
                var yearlyGeneralLadgerBook = {};

                yearlyGeneralLadgerBook.AMSignature = AMSignature.val();///
                yearlyGeneralLadgerBook.AMRemark = AMRemark.val();///
                yearlyGeneralLadgerBook.DGMSignature = DGMSignature.val();///
                yearlyGeneralLadgerBook.DGMRemark = DGMRemark.val();///
                yearlyGeneralLadgerBook.GMSignature = GMSignature.val();///
                yearlyGeneralLadgerBook.GMRemark = GMRemark.val();///

                yearlyGeneralLadgerBook.DailyCashId = row.find("TD").eq(0).text();
                yearlyGeneralLadgerBook.Balance = row.find("TD").eq(1).text().trim();
                yearlyGeneralLadgerBook.Credit = row.find("TD").eq(2).text();
                yearlyGeneralLadgerBook.Devit = row.find("TD").eq(3).text();
                yearlyGeneralLadgerBook.PreOrderCheckNo = row.find("TD").eq(4).text();
                yearlyGeneralLadgerBook.LedgerType = row.find("td:eq(5) select option:selected").text();
                yearlyGeneralLadgerBook.Description = row.find("TD").eq(6).text();
                yearlyGeneralLadgerBook.DailyCashDate = row.find("TD").eq(7).text();
                yearlyGeneralLadgerBook.MonthlyGeneralLedgerBookId = row.find("TD").eq(8).text();
                yearlyGeneralLadgerBook.CreatedDate = new Date();

                yearlyGeneralLedgerBookList.push(yearlyGeneralLadgerBook);
            });

            //Send the JSON array to Controller using AJAX.
            $.ajax({
                type: "POST",
                url: "/Account/GeneralLedger/InsertYearlyGeneralLedgerBook",
                data: { data: yearlyGeneralLedgerBookList },
                success: function (data) {

                    if (data === 1) {
                        alert("Data save & update successfully!");
                        window.location.replace("/Account/GeneralLedger/GeneralLedgerBookList");
                    }
                    else if (data === 2) {
                        alert("Data didn't save & update successfully!!");
                        window.location.replace("/Account/GeneralLedger/GeneralLedgerBookList");
                    }
                }
            });
        });
    </script>
}
