@model AJWManagementPortal.Models.ViewModels.SubLedgerAndLedgerViewModel
@using AJWManagementPortal.Extensions
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}
