@*This HTML for ::SubLedger Index=view for account office::*@
<br />
<br />
<div class="border backgroundWhite">
    <div class="row">
@*<div class="col-6">
        <h2 class="text-info">Accounts Sub Ledger List</h2>
    </div>*@
<div class="col-12 text-right">
        <partial name="_CreateButtonPartialSubLedger" />
    </div>
</div>
<div class="row">
    <div class="col-12 text-center">
        <h2 class="text-info">Accounts Sub Ledger List</h2>
    </div>
@*<div class="col-6 text-right">
        <partial name="_CreateButtonPartial" />
    </div>*@
</div>
    <br />
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        @Html.DisplayNameFor(m => m.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Ledger.LedgerName)
                    </th>
                    <th></th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Ledger.LedgerName)
                        </td>
                        <td>
                            <partial name="_TableButtonPartialSubLedger" model="item.Id" />
                        </td>
                    </tr>
                }
            </table>
        }
        else
        {
            <p>No Sub Category exists...</p>
        }
    </div>
</div>
