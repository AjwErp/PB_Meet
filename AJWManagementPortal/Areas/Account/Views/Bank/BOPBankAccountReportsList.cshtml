@*----------Header Code for this Page--------------------------------Start-------------------Header------------------*@
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = "BOPBankAccountReportsList";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}

@*----------Header Code for this Page--------------------------------Ended-------------------Header------------------*@

@*----------Body Code for this Page----------------------------------Start---------------------Body----------------*@

@*This HTML for ::Bank Checl Approval voucher List=view for account office ::*@

<br />
<body>
    <div class="container-fluid backgroundWhiteBorder10Padding">
        <div class="row">
            <div class="header col-sm-12">
                <br />
                <a class="logo font-weight-bold">@Localizer["Punjab Bank Reports List"]</a>
            </div>
            <br />
            @*--------------------Start------------Daily BOP Bank Reports----------------------------------*@
            <form class="tabled col-sm-12">
                <hr />
                <div class="col-sm-12 text-right">
                    <a type="button" class="btn btn-primary" asp-area="Account" asp-controller="DailyAccountReport" asp-action="DailyCashClosingReport"><i class="fas fa-plus"> @Localizer["Create New Daily BOP Bank Account Report"]</i> </a>
                </div>
                <br />
                <div class="col-sm-12 text-center">
                    <a class="titleAccountofficeReport" scope="col" colspan="10">@Localizer["Daily BOP Bank Account Report List - Account Office"]</a>
                </div>
                <br />
                <table class="table table-bordered" id="DPBReport">
                    <thead>
                        <tr class="Subhdr">
                            <th> @Localizer["Action"]</th>
                            <th>@Localizer["Date"]</th>
                            <th>@Localizer["Title"]</th>
                            <th>@Localizer["ID#"]</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="tabbody">
                            <td>
                                <div class="actionbtn">
                                    <button class="btn btn-primary btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        @Localizer["Action"]
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-edit"></i> @Localizer["View"]</a>
                                        <a class="dropdown-item" asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-list-alt"></i> @Localizer["Edit"]</a>
                                        <a class="dropdown-item" asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-trash-alt"></i> @Localizer["Delete"]</a>
                                        <a class="dropdown-item" asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-upload"></i> @Localizer["Upload to Repository"]</a>
                                        <a class="dropdown-item" asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-upload"></i> @Localizer["Upload to DMS"]</a>
                                    </div>
                                </div>
                            </td>
                            <td>@*@item.ValueDate*@ </td>
                            <td>@Localizer["Daily BOP Bank Account Report"]</td>
                            <td>@*@item.Id*@</td>
                        </tr>
                    </tbody>
                </table>

                @*--------------------ended------------Daily BOP Bank  Reports----------------------------------*@
                @*--------------------sart------------Monthly BOP Bankr Reports----------------------------------*@

