@*----------Header Code for this Page--------------------------------Start-------------------Header------------------*@
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
    ViewData["Title"] = "IndustrySupplierLedgerBookList";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}
@*----------Header Code for this Page--------------------------------Ended-------------------Header------------------*@

@*----------Body Code for this Page----------------------------------Start---------------------Body----------------*@

<br />
<body>
    <div class="container-fluid backgroundWhiteBorder10Padding">
        <div class="row">
            <div class="header col-sm-12">
                <br />
                <a class="logo font-weight-bold font-weight-bolder">@Localizer["Industry Supplier Ledger Book Reports List"]</a>
            </div>

            <form class="tabled col-sm-12 SubH">
                <hr />
                <div class="row">
                    <div class="col-sm-3">
                        <ul>
                            <li class="nav-item dropdown text-white-50">
                                @Html.DropDownList("MonthlyIndustrySupplierLedger", ViewBag.MonthlyIndustrySupplierLedgerList as SelectList, "Select Monthly Industry Supplier Ledger", new { @class = "nav-link dropdown-toggle btn btn-primary", @style = "width:250px;height:43px; font-size:medium" })
                            </li>
                        </ul>
                    </div>
                    <div class="col-sm-3 Createbtn" style="margin-left: -3%; margin-right: 3%;">
                        <a type="button" class="btn btn-primary" asp-area="Account" asp-controller="MonthlyIndustrySupplierLedgers" asp-action="CreateMonthlyIndustrySupplierLedger"><i class="fas fa-plus"> @Localizer["Create Monthly Internal Ledger"]</i> </a>
                    </div>
                    <div class="col-sm-6 Createbtn">
                        <a type="button" class="btn btn-primary " asp-area="Account" asp-controller="Ledger" asp-action="IndustrySupplierLedgerBook"><i class="fas fa-plus"> @Localizer["Create New Monthly Industry Suppliers Ledger"]</i> </a>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-sm-12 text-center">
                        <a class="titleAccountofficeReport" scope="col" colspan="10">@Localizer["Monthly Industry Suppliers Ledger-Account Office"]</a>
                    </div>
                </div>
                <br />
                <table class="table table-bordered" id="MISLBook">
                    <thead>
                        <tr class="Subhdr SubH">
                            <th>@Localizer["Action"] </th>
                            <th>@Localizer["Date"]</th>
                            <th>@Localizer["Title"]</th>
                            <th>@Localizer["ID#"]</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="tabbody smallfontHeading">
                            <td class="actionbtn">
                                <div class="btn-group">
                                    <button class="btn btn-primary btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        @Localizer["Action"]
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-edit"></i> @Localizer["View"]</a>
                                        <a class="dropdown-item" asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-list-alt"></i> @Localizer["Edit"]</a>
                                        <a class="dropdown-item" asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-trash-alt"></i> @Localizer["Delete"]</a>
                                        <a class="dropdown-item" asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-upload"></i> @Localizer["Upload to Repository"]</a>
                                        <a class="dropdown-item" asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-upload"></i> @Localizer["Upload to DMS"]</a>
                                    </div>
                                </div>
                            </td>
                            <td></td>
                            <td>@Localizer["Monthly Industry Suppliers Ledger"] </td>
                            <td></td>
                        </tr>
                    </tbody>
                </table>
                <hr />
                <div class="row">
                    <div class="col-sm-3">
                        <ul>
                            <li class="nav-item dropdown text-white-50">
                                @Html.DropDownList("YearlyIndustrySupplierLedger", ViewBag.YearlyIndustrySupplierLedgerList as SelectList, "Select Yearly Industry Supplier Ledger", new { @class = "nav-link dropdown-toggle btn btn-primary", @style = "width:250px;height:43px; font-size:medium" })
                            </li>
                        </ul>
                    </div>
                    <div class="col-sm-3 Createbtn" style="margin-left: -3%; margin-right: 3%;">
                        <a type="button" class="btn btn-primary" asp-area="Account" asp-controller="YearlyIndustrySupplierLedgers" asp-action="CreateYearlyIndustrySupplierLedger"><i class="fas fa-plus"> @Localizer["Create Yearly Internal Ledger"]</i> </a>
                    </div>
                    <div class="col-sm-6 Createbtn">
                        <a type="button" class="btn btn-primary " asp-area="Account" asp-controller="Ledger" asp-action="IndustrySupplierLedgerBook"><i class="fas fa-plus"> @Localizer["Create New Yearly Industry Suppliers Ledger"]</i> </a>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-sm-12 text-center">
                        <a class="titleAccountofficeReport" scope="col" colspan="10">@Localizer["Yearly Industry Suppliers Ledger-Account Office"]</a>
                    </div>
                </div>
                <br />
                <table class="table table-bordered" id="YISLBook">
                    <thead>
                        <tr class="Subhdr SubH">
                            <th>@Localizer["Action"]</th>
                            <th>@Localizer["Date"]</th>
                            <th>@Localizer["Title"]</th>
                            <th>@Localizer["ID#"]</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="tabbody smallfontHeading">
                            <td class="actionbtn">
                                <div class="btn-group">
                                    <button class="btn btn-primary btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        @Localizer["Action"]
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-edit"></i> @Localizer["View"]</a>
                                        <a class="dropdown-item" asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-list-alt"></i> @Localizer["Edit"]</a>
                                        <a class="dropdown-item" asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-trash-alt"></i> @Localizer["Delete"]</a>
                                        <a class="dropdown-item" asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-upload"></i> @Localizer["Upload to Repository"]</a>
                                        <a class="dropdown-item" asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-upload"></i> @Localizer["Upload to DMS"]</a>
                                    </div>
                                </div>
                            </td>
                            <td></td>
                            <td>@Localizer["Yearly Industry Suppliers Ledger"] </td>
                            <td></td>
                        </tr>
                    </tbody>
                </table>
            </form>
        </div>
    </div>
</body>
<a id="button"></a>
@section Scripts{
    <script>
        $("#YearlyIndustrySupplierLedger").change(function () {
            var id = $("#YearlyIndustrySupplierLedger").val();
            var value = $("#YearlyIndustrySupplierLedger option:selected").text();
            window.location.replace("/Account/YearlyIndustrySupplierLedgers/YearlyIndustrySupplierLedgerBook?id=" + id + "&value=" + value);

        });

        $("#MonthlyIndustrySupplierLedger").change(function () {
            var id = $("#MonthlyIndustrySupplierLedger").val();
            var value = $("#MonthlyIndustrySupplierLedger option:selected").text();
            window.location.replace("/Account/MonthlyIndustrySupplierLedgers/MonthlyIndustrySupplierLedgerBook?id=" + id + "&value=" + value);

        });

        $(document).ready(function () {
            $('#DISLBook').DataTable({
                "sPaginationType": "full_numbers"
            });
        });
        $(document).ready(function () {
            $('#MISLBook').DataTable({
                "sPaginationType": "full_numbers"
            });
        });
        $(document).ready(function () {
            $('#YISLBook').DataTable({
                "sPaginationType": "full_numbers"
            });
        });
    </script>
}
