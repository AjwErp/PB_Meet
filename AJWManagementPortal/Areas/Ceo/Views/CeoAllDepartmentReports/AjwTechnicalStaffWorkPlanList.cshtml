@model IEnumerable<TechnicalStaffWorkPlan>

@*----------Header Code for this Page--------------------------------Start-------------------Header------------------*@
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = "AjwTechnicalStaffWorkPlanList";
    Layout = "~/Views/Shared/_LayoutProduction.cshtml";
}

@*----------Header Code for this Page--------------------------------Ended-------------------Header------------------*@

@*----------Body Code for this Page----------------------------------Start---------------------Body----------------*@
<br />
<body>
    <div class="container-fluid backgroundWhiteBorder10Padding">
        <div class="row">
            <div class="header col-sm-12">
                <br />
                <a class="logo font-weight-bold font-weight-bolder">@Localizer["AJW TECHNICAL STAFF WORKING PLAN FILE LIST"]</a>
            </div>
            @*--------------1----------start---------------------------- Table for Daily Main Bank LedgerBook List----------------------------------------------------------*@
            <form class="tabled col-sm-12">
                <hr />
                <div class="col-sm-12 Createbtn">
                    <a type="button" class="btn btn-primary" asp-controller="AjwAllDailyPlan" asp-area="Production" asp-action="AjwTechnicalStaffWorkPlan"><i class="fas fa-plus"> @Localizer["Create New Technical Work Plan"]</i> </a>
                </div>
                <br />
        
                <table class="table table-bordered" id="DMBLBook">
                    <thead>
                        <tr class="Subhdr SubH">
                            <th>@Localizer["Action"] </th>
                            <th>@Localizer["Date"]</th>
                            <th>@Localizer["Title"]</th>
                            <th>@Localizer["ID#"]</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="SubH ">
                                <td class="actionbtn">
                                    <div class="btn-group">
                                        <button class="btn btn-primary btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            @Localizer["Action"]
                                        </button>
                                        <div class="dropdown-menu">
                                            <a class="dropdown-item" asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-list-alt"></i> @Localizer["View"]</a>
                                            <a class="dropdown-item " asp-action="EditAjwTechnicalStaffWorkPlan" asp-controller="AjwAllDailyPlan" asp-area="Production" asp-route-remarks="@item.Remarks"><i class="fas fa-edit"></i> @Localizer["Edit"]</a>
                                            <a class="dropdown-item " asp-action="DeleteAjwTechnicalStaffWorkPlan" asp-controller="AjwAllDailyPlan" asp-area="Production" asp-route-remarks="@item.Remarks"><i class="fas fa-trash-alt"></i> @Localizer["Delete"]</a>
                                            <a class="dropdown-item " asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-file-download"></i> @Localizer["Download"]</a>
                                            <a class="dropdown-item " asp-action="SendToGmOffice" asp-controller="AjwAllDailyPlan" asp-area="Production" asp-route-remarks="@item.Remarks"><i class="fas fa-send"></i> @Localizer["Send To G.M Offcie"]</a>
                                        </div>
                                    </div>
                                </td>
                                <td>@item.Date</td>
                                <td>Ajw Technical Staff Work Plan</td>
                                <td>@item.Id</td>
                                @*<td>@Localizer["Ajw Technical Staff Working Plan"] </td>*@
                            </tr>
                        }
                        </tbody>
                     
                </table>
                @*-------------------1-----ended---------------------------- Table for Daily Main Bank LedgerBook List----------------------------------------------------------*@
            </form>
        </div>
    </div>
</body>
<!-- back to top button-->
<a id="button"></a>
@*----------Body Code for this Page----------------------------------Ended---------------------Body----------------*@

@*----------JS for this Page-----------------------------------------Start---------------------JS----------------*@
@section Scripts{
    <script>
        //------JS for Pagination and Datatables for Accounts All Main Bank Ledger Book---Start----
        $(document).ready(function () {
            $('#DMBLBook').DataTable({
                "sPaginationType": "full_numbers"
            });
        });
//--------
    </script>
}
@*----------JS for this Page-----------------------------------------Ended----------------------JS---------------*@

