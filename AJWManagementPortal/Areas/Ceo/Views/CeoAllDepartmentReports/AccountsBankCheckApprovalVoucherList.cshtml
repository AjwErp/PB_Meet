@*----------Header Code for this Page--------------------------------Start-------------------Header------------------*@
@*---Language Tranlator--Localizer*@
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
    ViewData["Title"] = "AccountsBankCheckApprovalVoucherList";
    Layout = "~/Views/Shared/_LayoutCeo.cshtml";
}

@*----------Header Code for this Page--------------------------------Ended-------------------Header------------------*@

@*----------Body Code for this Page----------------------------------Start---------------------Body----------------*@


@*::This HTML For AccountsBankcheck approval for CEO Offcie by CEO Office::*@
<br />
<body>
    <div class="container-fluid backgroundWhiteBorder10Padding">
        <div class="row">
            <div class="header col-sm-12">
                <a class="logo font-weight-bold font-weight-bolder">@Localizer["Accounts All Reports Repositoury Reports List"]</a>
            </div>
            <br />
            @*-----------1-------------start---------------------------- Table for Daily Accounts Reports Repository List----------------------------------------------------------*@
            <form class="tabled col-sm-12">

                @*---------------------------Daily Bank Check Approval---------------------------*@
                <hr />
                <div class="col-sm-12 text-center">
                    <a class="titleCeoOffcieReport" colspan="10">@Localizer["Bank Check Approval Voucher List-Account Office"]</a>
                </div>
                <br />
                <table class="table table-bordered" id="DARReport">
                    <thead>
                        <tr class="Subhdr SubH">
                            <th>@Localizer["Action"] </th>
                            <th>@Localizer["Date"]</th>
                            <th>@Localizer["Title"]</th>
                            <th>@Localizer["ID#"]</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="tabbody SubH">
                                <td class="actionbtn">
                                    <div class="btn-group">
                                        <button class="btn btn-primary btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            @Localizer["Action"]
                                        </button>
                                        <div class="dropdown-menu">
                                            <a class="dropdown-item" asp-area="Ceo" asp-controller="CeoAllDepartmentReports" asp-action="DailyMeezanBankVoucherReport" asp-route-id="@item.dateTime.ToString("yyyy-MM-dd")" asp-route-hide="false"><i class="fas fa-list-alt"></i> @Localizer["View"]</a>
                                            <a class="dropdown-item" asp-area="Ceo" asp-controller="CeoAllDepartmentReports" asp-action="DailyMeezanBankVoucherReport" asp-route-id="@item.dateTime.ToString("yyyy-MM-dd")" asp-route-hide="true"><i class="fas fa-edit"></i> @Localizer["Edit"]</a>
                                            <a class="dropdown-item" asp-area="Ceo" asp-controller="CeoAllDepartmentReports" asp-action="DeleteMeezanVSheet" asp-route-remarks="@item.dateTime.ToString("yyyy-MM-dd")"><i class="fas fa-trash-alt"></i> @Localizer["Delete"]</a>
                                            <a class="dropdown-item " asp-area="Ceo" asp-action="SendToAccountOffice" asp-controller="CeoAllDepartmentReports" asp-route-remarks="@item.dateTime.ToString("yyyy-MM-dd")"><i class="fas fa-send"></i> @Localizer["Send To Account Office"]</a>

                                        </div>
                                    </div>
                                </td>
                                <th>@item.dateTime </th>
                                <th>@Localizer["Daily Meezan Bank Income-Expense Voucher Report"] </th>
                                <th>@item.Id</th>
                            </tr>
                        }
                    </tbody>
                </table>

                @*------------------------------------------------------*@
            </form>
        </div>
    </div>
</body>
<!-- back to top button-->
<a id="button"></a>
@*----------Body Code for this Page----------------------------------Ended---------------------Body----------------*@

@*----------JS for this Page-----------------------------------------Start---------------------JS----------------*@
@section Scripts{
    <script>
        //---------JS for Back To Top Button On Each Page------------------Start-------
        var btn = $('#button');

        $(window).scroll(function () {
            if ($(window).scrollTop() > 300) {
                btn.addClass('show');
            } else {
                btn.removeClass('show');
            }
        });

        btn.on('click', function (e) {
            e.preventDefault();
            $('html, body').animate({ scrollTop: 0 }, '300');
        });

        //---JS for Admin LAW Book List----start----
        $(document).ready(function () {
            $('#DGLBook').DataTable({
                "sPaginationType": "full_numbers"
            });
        });

        //-----
        $(document).ready(function () {
            $('#DARReport').DataTable({
                "sPaginationType": "full_numbers"
            });
        });


        $(document).ready(function () {
            $('#MARReport').DataTable({
                "sPaginationType": "full_numbers"
            });
        });


        $(document).ready(function () {
            $('#YARReport').DataTable({
                "sPaginationType": "full_numbers"
            });
        });


        $(document).ready(function () {
            $('#AARReport').DataTable({
                "sPaginationType": "full_numbers"
            });
        });


    </script>
}
@*----------JS for this Page-----------------------------------------Ended----------------------JS---------------*@

