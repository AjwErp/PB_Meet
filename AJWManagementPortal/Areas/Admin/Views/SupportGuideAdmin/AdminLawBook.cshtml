                                    <option>@ViewBag.dept</option>
                                    <option class="font-weight-bold ">@localizer["Select Department"]</option>
                                    <option>@localizer["ADMIN"]</option>
                                    <option>@localizer["ACCOUNTS"]</option>
                                    <option>@localizer["CEO"]</option>
                                    <option>@localizer["DGM"]</option>
                                    <option>@localizer["GM"]</option>
                                    <option>@localizer["PRODUCTION"]</option>
                                    <option>@localizer["HRM"]</option>
                                    <option>@localizer["PURCHASE"]</option>
                                    <option>@localizer["SALES"]</option>
                                    <option>@localizer["PPC"]</option>
                                    <option>@localizer["ACCESSORY"]</option>
                                    <option>@localizer["MAINTENANCE"]</option>
                                    <option>@localizer["DESIGN"]</option>
                                    <option>@localizer["STORE"]</option>
                                    <option>@localizer["ELECTRIC"]</option>
                                    <option>@localizer["SECURITY"]</option>
