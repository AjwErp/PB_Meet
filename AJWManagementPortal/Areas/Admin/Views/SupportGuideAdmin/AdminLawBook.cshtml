                                <thead>
                                    <tr class="">
                                        <th>@localizer["ID#"]</th>
                                        <th>@localizer["Law's Description"]</th>
                                        <th>@localizer["Edit Number"]</th>
                                        <th>@localizer["Page Number"]</th>
                                        <th>@localizer["Previous Edit Number"]</th>
                                        <th>@localizer["Previous Page Number"]</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td> <span class="en">@Html.DisplayFor(modelItem => item.Id)</span> </td>
                                            <td>
                                                <textarea type="text" value="" class="form-control">@item.lawDescription</textarea>
                                            </td>
                                            <td><input type="text" id="" class="form-control" value="@Html.DisplayFor(modelItem => item.editNumber)" /></td>
                                            <td><input type="text" id="" class="form-control" value="@Html.DisplayFor(modelItem => item.pageNumber)" /></td>
                                            <td><input type="text" id="" class="form-control" value="@Html.DisplayFor(modelItem => item.previousEditNumber)" /></td>
                                            <td><input type="text" id="" class="form-control" value="@Html.DisplayFor(modelItem => item.previousPageNumber)" /></td>

                                        </tr>

                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <td> <span class="en"> <button type="button" id="btnAdd" value="Add" class="btn btn-primary btn-sm form-control">@localizer["Add"]<br />@localizer["Row"]</button></span> </td>
                                        <td>
                                            <textarea type="text" class="form-control" id="txtDesc" name="txtDesc"></textarea>
                                        </td>
                                        <td><input type="text" id="txtEditNumber" name="txtEditNumber" class="form-control" /></td>
                                        <td><input type="text" id="txtPageNumber" name="txtPageNumber" class="form-control" /></td>
                                        <td><input type="text" id="txtPreviousEditNumber" name="txtPreviousEditNumber" class="form-control" /></td>
                                        <td><input type="text" id="txtPreviousPageNumber" name="txtPreviousPageNumber" class="form-control" /></td>
                                    </tr>
                                    <tr>
                                        <td scope="row" colspan="13" class="actionbtn">

                                            <div class="btn-group">
                                                <a asp-action="AdminLawBookList" asp-area="Admin" asp-controller="SupportGuideAdmin" type="button" class="btn btn-primary btn-md" value="Back To List">@localizer["Back To List"]</a>

                                                <input id="btnSave" class="btn btn-success btn-md" name="btnSave" value="Save File" type="button" />

                                            </div>
                                        </td>
                                    </tr>

                                </tfoot>

                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</body>

