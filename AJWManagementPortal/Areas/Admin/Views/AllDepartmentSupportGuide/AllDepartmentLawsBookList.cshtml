@*this code is for language transalator inject localizer--------------*@
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@*this code is for language transalator inject localizer--------------*@

@{
    ViewData["Title"] = "AllDepartmentLawsBookList";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@*----------Header Code for this Page--------------------------------Ended-------------------Header------------------*@

<br />
<body>
    <div class="container-fluid backgroundWhiteBorder10Padding">
        <div class="row">
            <div class="header col-sm-12">
                <a class="logo font-weight-bold">@Localizer["All Department Laws Book List"]</a>
            </div>
            <br />
            @*------------------------start---------------------------- Table for Daily GeneralLedgerBook List----------------------------------------------------------*@
            <form class="tabled col-sm-12">
                <hr />
                <div class="row">
                    <div class="col-sm-12 Createbtn">
                        <a type="button" class="btn btn-primary" asp-area="Admin" asp-controller="AllDepartmentSupportGuide" asp-action="StandardLawBook"><i class="fas fa-plus"> @Localizer["Create New Department's Law book"]</i> </a>
                    </div>
                    <br />
                </div>
                <br />
                <table class="table table-bordered" id="MAReport">
                    <thead>
                        <tr class="Subhdr SubH">
                            <th>@Localizer["Action"] </th>
                            <th>@Localizer["Date"]</th>
                            <th>@Localizer["Title"]</th>
                            <th>@Localizer["ID#"]</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="tabbody SubH">
                            <td class="actionbtn">
                                <div class="btn-group">
                                    <button class="btn btn-primary btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        @Localizer["Action"]
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-list-alt"></i> @Localizer["View"]</a>
                                        <a class="dropdown-item" asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-edit"></i> @Localizer["Edit"]</a>
                                        <a class="dropdown-item" asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-trash-alt"></i> @Localizer["Delete"]</a>
                                        <a class="dropdown-item" asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-file-upload"></i> @Localizer["Post Law Book"]</a>
                                        <a class="dropdown-item" asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-download"></i> @Localizer["Download"]</a>
                                        <a class="dropdown-item" asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-send"></i> @Localizer["Send To D.G.M Office"]</a>
                                    </div>
                                </div>
                            </td>
                            <td></td>
                            <td>@Localizer["Admin  Law  Book"] </td>
                            <td></td>
                        </tr>
                    </tbody>
                </table>

                @*------------------------start---------------------------- Table for Yearly Accounts Reports Repository  List----------------------------------------------------------*@

            </form>
        </div>
    </div>
</body>
<!-- back to top button-->
<a id="button"></a>
<!-- back to top button-->
@*----------Body Code for this Page----------------------------------Start---------------------Body----------------*@
@*----------Body Code for this Page----------------------------------Ended---------------------Body----------------*@

@*----------JS for this Page-----------------------------------------Start---------------------JS----------------*@
@section Scripts{
    <script>
        //-----------JS For Accounts Monthly /Yearly Reports--------------Start---------
        $(document).ready(function () {
            $('#MAReport').DataTable({
                "sPaginationType": "full_numbers"
            });
        });
        //----------
        $(document).ready(function () {
            $('#YAReport').DataTable({
                "sPaginationType": "full_numbers"
            });
        });




    </script>
}
@*----------JS for this Page-----------------------------------------Ended----------------------JS---------------*@

