@*this code is for language transalator inject localizer--------------*@
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@*this code is for language transalator inject localizer--------------*@
@model IEnumerable<AJWNoticeBoardHrm>


@{
    ViewData["Title"] = "Home Page";
}


<style>
    /* Make the image fully responsive */
    .carousel-inner img {
        width: 100%;
        height: 400px;
        margin: auto;
    }

    .footerrr {
        /*text-align:center;*/
        position: center;
        height: 200px;
        width: 1345px;
        margin-left: -15px;
        margin-right: -35px;
        margin-bottom: -80px;
        position: relative;
        background-color: whitesmoke;
    }

    .ajwagro {
        text-align: center;
    }
</style>

@*caroudsel start here*@
<div class="container-fluid mt-3">



    <div id="myCarousel" style="margin-left:-50px; margin-right:-30px;margin-top:-17px" class="carousel slide" data-ride="carousel">

        <!-- Indicators -->
        <ul class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
            <li data-target="#myCarousel" data-slide-to="3"></li>
        </ul>

        <!-- The slideshow -->
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/Image/ajw out.jpg" class="img-fluid" alt="Responsive image">
            </div>
            <div class="carousel-item">
                <img src="~/image/ajw yoyo.jpg" class="img-fluid" alt="Responsive image">
            </div>
            <div class="carousel-item">
                <img src="~/image/ajw caro 4.jpg" class="img-fluid" alt="Responsive image">
            </div>
            <div class="carousel-item">
                <img src="~/image/ajw park.jpg" class="img-fluid" alt="Responsive image">
            </div>
        </div>
        <!-- Left and right controls -->
        <a class="carousel-control-prev" href="#myCarousel" data-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </a>
        <a class="carousel-control-next" href="#myCarousel" data-slide="next">
            <span class="carousel-control-next-icon"></span>
        </a>
    </div>
</div>
<br />
<div title="اے جے ڈبلیو ہائی اتھارٹی">
    <h5 style="font-size: 25px !important; margin-top:-15px;" class="text-center">@Localizer["AJW AGRO INDUSTRY & WORKSHOP"]</h5>
</div>
<div class="container-fluid">
    <div class="row">
        @*here we start cards for profile---------*@
        <div style="margin-left:1px;" class="card-deck col-12 text-center ">

            <div style="font-size: 20px !important;" class="card m-1 col-sm-3">
                <div class="card-header">
                    <h3>@Localizer["C.E.O"]</h3>
                </div>
                <img class="card-img-top" src="~/Image/0.png" height="350" asp-append-version="true" />
                <div class="card-footer text-center">
                    <a class="m-1">@Localizer["Mr saqib  Sahib"]</a><br />

                    <a class="m-1">ajwagroindustry.pk@Gmail.com</a><br />
                    <a class="m-1">@Localizer["Pakistan"]</a><br />
                </div>
            </div>

            <div style="font-size: 20px !important;" class="card m-1 col-sm-3">
                <div class="card-header">
                    <h3> @Localizer["G.M"]</h3>
                </div>
                <img class="card-img-top" src="~/image/0.png" height="350" asp-append-version="true" />
                <div class="card-footer text-center">
                    <a class="m-1">@Localizer["Mr Naeem Sahib"]</a><br />

                    <a class="m-1">ajwagroindustry.pk@Gmail.com</a><br />
                    <a class="m-1">@Localizer["Pakistan"]</a><br />
                </div>
            </div>

            <div style="font-size: 20px !important;" class="card m-1 col-sm-3">
                <div class="card-header">
                    <h3>@Localizer["D.G.M"]</h3>
                </div>
                <img class="card-img-top" src="~/image/0.png" height="350" asp-append-version="true" />
                <div class="card-footer text-center">
                    <a class="m-1">@Localizer["Mr Hamza Sahib"]</a><br />

                    <a class="m-1">ajwagroindustry.pk@Gmail.com</a><br />
                    <a class="m-1">@Localizer["Pakistan"]</a><br />
                </div>
            </div>

            <div style="margin-top:5px;" class="table col-sm-3">
                <table class="table table-striped" title="اے جے ڈبلیو نوٹس بورڈ">
                    <thead>
                        <tr>
                            <th style="font-size:25px" class="text-in"> @Localizer["NOTIC BOARD"]</th>
                        </tr>
                    </thead>
                    <tbody style="font-size:25px;">
                        <tr style="text-align:justify;">
                            <td>
                                <marquee height="400" behavior="scroll" direction="up" onmouseover="this.stop();" onmouseout="this.start();">
                                    @{
                                        foreach (AJWNoticeBoardHrm b in ViewBag.Home)
                                        {
                                            <hr />
                                            <div>
                                                <h2 style="color:orange" class="text-center"> @b.Title  &nbsp;<img src="~/Image/blinknew.gif" /></h2>
                                                <hr />
                                                <p class="text-center" style="color:orange"> @b.Date  </p>
                                            </div>

                                            <hr />
                                            <p>تفصیل:@b.Description</p>

                                        }
                                    }
                                </marquee>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<body>

    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="modal" id="myModal" tabindex="-1" style="margin-top:50px;height:700px;">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header bg-dark">
                                @*<h4 class="modal-title" id="addEmployeeLabel">Add Employee</h4>*@
                                <button type="button" class="close bg-danger" data-dismiss="modal">
                                    <span>X</span>
                                </button>
                            </div>

                            <div class="modal-body">
                                <form>
                                    <div style="margin-top:5px;" class="col-lg-12">
                                        <table class="table table-striped" title="اے جے ڈبلیو نوٹس بورڈ">
                                            <thead>
                                                <tr>
                                                    <th style="font-size:25px" class="text-in text-center bg-dark text-white"> @Localizer["AJW NOTICE BOARD"]</th>
                                                </tr>
                                            </thead>
                                            <tbody style="font-size:25px;">
                                                <tr style="text-align:justify;">
                                                    <td>
                                                        <marquee height="400" behavior="scroll" direction="up" onmouseover="this.stop();" onmouseout="this.start();">
                                                            @{
                                                                foreach (AJWNoticeBoardHrm b in ViewBag.Home)
                                                                {
                                                                    <hr />
                                                                    <div>
                                                                        <h2 style="color:orange" class="text-center"> @b.Title  &nbsp;<img src="~/Image/blinknew.gif" /></h2>
                                                                        <hr />
                                                                        <p class="text-center" style="color:orange"> @b.Date  </p>
                                                                    </div>

                                                                    <hr />
                                                                    <p class="text-left" style="color:black">@b.Description</p>
                                                                    <hr />
                                                                }
                                                            }
                                                        </marquee>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>

                                </form>
                            </div>

                            <div class="modal-footer bg-dark">
                                @*<button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                                <button type="button" class="btn btn-primary" data-dismiss="modal">Save</button>*@
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

@section Scripts{
    <script src="js/jquery-3.5.1.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#myModal").modal('show');
        });
    </script>
}
