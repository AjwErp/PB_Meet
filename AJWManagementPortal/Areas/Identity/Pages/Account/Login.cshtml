@*----This HTML Identity For User Login Page---*@

<div class="row search-background">
    <div class="col-md-6 col-md-offset-2">
             <h4 class="text-center" style="margin-top:100px"><img id="main-logo" style="height:400px;" src="~/image/ajwaagro.png"><br /></h4>
            </div>
            <div class="col-md-4 center">

                <section>
                    <form id="account" method="post" class="search-background">

                        <h1 class="text-center">Login Form</h1>
                        <hr />

                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Input.Email"></label>
                            <input asp-for="Input.Email" class="form-control" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class=" form-group">
                            @*<input asp-for="Input.Department"  class="form-control" />*@
                            <label>Department</label>
                            <select asp-for="Input.Department" class="form-control">
                                <option>Select Department</option>
                                <option>Admin </option>
                                <option>C.E.O</option>
                                <option>G.M</option>
                                <option>D.G.M</option>
                                <option>Account</option>
                                <option>Purchase</option>
                                <option>Sales</option>
                                <option>Design</option>
                                <option>HRM</option>
                                <option>Mentanance</option>
                                <option>Accessories</option>
                                <option>Store</option>
                                <option>Production</option>
                                <option>Meeting</option>
                                <option>DMS</option>
                                <option>Security</option>
                                <option>IT</option>
                            </select>
                        </div>
                        <span asp-validation-for="Input.Department" class="text-danger"></span>

                        <div class="form-group">
                            <label asp-for="Input.Password"></label>
                            <input asp-for="Input.Password" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <div class="checkbox">
                                <label asp-for="Input.RememberMe">
                                    <input asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                        </div>
                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-primary btn-lg btn-block">Log in</button>
                        </div>
                        <div class="form-group text-center">
                            <p>
                                <a id="forgot-password" asp-page="./ForgotPassword" class="btn btn-info">Forgot your password? </a>
                            </p>
                            <p>
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-info">Register as a new user</a>
                            </p>
                        </div>
                    </form>
                </section>
            </div>
