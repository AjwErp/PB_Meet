@page
@using AJWManagementPortal.Utility
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}



<div class="row search-background">
    <div class="col-md-6 col-md-offset-2">
        <section>
            <div style="margin-top:60px;" class="text-center">
                <img id="main-logo" style="height:400px;" src="~/Image/ajwaagro.png" />
            </div>

        </section>
    </div>
    <div class="col-md-4">
        <section>

            <form method="post" class="text-center" asp-route-returnUrl="@Model.ReturnUrl">
                <br />

                    <h2>Registration Form</h2>
                    <hr />
                <div>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group row">
                    
                        <div class="col-lg-12">

                            <input asp-for="Input.Name" class="form-control" placeholder="Eneter Full Name" />
                        </div>
                        <span asp-validation-for="Input.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                    
                        <div class="col-lg-12">
                            <input asp-for="Input.Email" class="form-control" placeholder="Enter Email i.e ajwindustry@gmail.com" />
                        </div>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                  
                        <div class="col-lg-12">
                            <input asp-for="Input.Password" class="form-control" placeholder="Enter Password i.e #Ajw12345" />
                        </div>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                  
                        <div class="col-lg-12">
                            <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Enter Re Password" />
                        </div>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                   
                        <div class="col-lg-12">
                            <input asp-for="Input.CNIC" class="form-control" placeholder="Enter CNIC i.e 36104-4830017-3" />
                        </div>
                        <span asp-validation-for="Input.CNIC" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                   
                        <div class="col-lg-12">
                            <input asp-for="Input.MobileNumber" class="form-control" placeholder="Enter Mobile No i.e 0308-9286130" />
                        </div>
                        <span asp-validation-for="Input.MobileNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                     
                        <div class="col-lg-12">
                            <select asp-for="Input.Department" class="form-control">
                                <option>Select Department</option>
                                <option>C.E.O</option>
                                <option>G.M</option>
                                <option>D.G.M</option>
                                <option>Account</option>
                                <option>Purchase</option>
                                <option>Sales</option>
                                <option>Design</option>
                                <option>HRM</option>
                                <option>Mentanance</option>
                                <option>Accessories</option>
                                <option>Store</option>
                                <option>Production</option>
                                <option>Electric</option>
                                <option>Kitchen</option>
                                <option>Guard</option>
                                <option>I.T</option>
                                <option>D.M.S</option>
                            </select>
                        </div>
                        <span asp-validation-for="Input.Department" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                   
                        <div class="col-lg-12">
                            <select asp-for="Input.Designation" class="form-control">
                                <option>Select Designation</option>
                                <option>C.E.O</option>
                                <option>G.M</option>
                                <option>D.G.M</option>
                                <option>Accounts Manager</option>
                                <option>Acc.Accounts Manager</option>
                                <option>Purchase Officer</option>
                                <option>Acc.Purchase Officer</option>
                                <option>Sales Officer</option>
                                <option>Acc.Sales Officer</option>
                                <option>Design Officer</option>
                                <option>Acc.Design Officer</option>
                                <option>HRM Officer</option>
                                <option>Acc.HRM Officer</option>
                                <option>Mentanance Officer</option>
                                <option>Acc.Mentanance Officer</option>
                                <option>Accessori Officer</option>
                                <option>Acc.Accessori Officer</option>
                                <option>Store Officer</option>
                                <option>Acc.Store Officer</option>
                                <option>Production Officer</option>
                                <option>Acc.Production Officer</option>
                                <option>DMS Officer</option>
                                <option>IT Officer</option>
                                <option>Acc.IT Officer</option>
                                <option>Electric Officer</option>
                                <option>Kitchen Boy</option>
                                <option>Security Officer</option>
                            </select>
                        </div>
                        <span asp-validation-for="Input.Designation" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                
                        <div class="col-lg-12">
                            <select asp-for="Input.Gender" class="form-control">
                                <option>Select Gender</option>
                                <option>Male</option>
                                <option>FeMale</option>
                            </select>
                        </div>
                        <span asp-validation-for="Input.Gender" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                 
                        <div class="col-lg-12">
                            <select asp-for="Input.Martialstatus" class="form-control">
                                <option>Select Marital Status</option>
                                <option>Maried</option>
                                <option>UnMaried</option>
                            </select>
                        </div>
                        <span asp-validation-for="Input.Martialstatus" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
             
                        <div class="col-lg-12">
                            <select asp-for="Input.Bloodgp" class="form-control">
                                <option>Select Blood Group</option>
                                <option>A+</option>
                                <option>A-</option>
                                <option>B-</option>
                                <option>B+</option>
                                <option>O-</option>
                                <option>O+</option>
                                <option>Not Known</option>
                            </select>
                        </div>
                        <span asp-validation-for="Input.Bloodgp" class="text-danger"></span>
                    </div>
                   
                    <div class="form-group row">
                 
                        <div class="col-lg-12">
                            <textarea asp-for="Input.Address" class="form-control" placeholder="Enter Address"></textarea>
                        </div>
                        <span asp-validation-for="Input.Address" class="text-danger"></span>
                    </div>
                  
                    <div class="form-group row">
                        <div class="col-lg-12 offset-2">
                            <button type="submit" class="btn btn-primary form-control">Register</button>
                        </div>
                    </div>
                </div>
            </form>
        </section>
    </div>
    </div>
   

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
