@*----------Header Code for this Page--------------------------------Start-------------------Header------------------*@
@model IEnumerable<Category>
@*---Language Tranlator--Localizer*@
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutStore.cshtml";
}

@*----------Header Code for this Page--------------------------------Ended-------------------Header------------------*@

@*----------Body Code for this Page----------------------------------Start---------------------Body----------------*@
@*This HMTL for ::All Ledgers Index =view for Account Office::*@
<br />
<div class="border backgroundWhite">
    <div class="row">
        <div class="col-12 text-center">
            <h2 class="text-info"> Store Ledger List</h2>
        </div>
        @*<div class="col-6 text-right">
                <partial name="_CreateButtonPartialLedger" />
            </div>*@
    </div>

    <div class="row">
        @*<div class="col-12">
                <h2 class="text-info"> Accounts Ledger List</h2>
            </div>*@
        <div class="col-12 text-right">
            <partial name="_CreateButtonPartialLedger" />
        </div>
    </div>
    <br />
    <div>
        @if (Model.Count() > 0)
        {
            <table id="Category" class="table table-striped border">
                <thead>
                    <tr class="table-dark ">
                        <th>
                            @Html.DisplayNameFor(m => m.CategoryName)
                        </th>
                        <th></th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m => item.CategoryName)
                            </td>
                            <td>
                                <partial name="_TableButtonPartialledger" model="item.Id" />
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No category exists...</p>
        }
    </div>
</div>



@*----------Body Code for this Page----------------------------------Ended---------------------Body----------------*@

@*----------JS for this Page-----------------------------------------Start---------------------JS----------------*@
@section Scripts{
    <script>
        $(document).ready(function () {
            $('#Category').DataTable();
        });

    </script>
}
