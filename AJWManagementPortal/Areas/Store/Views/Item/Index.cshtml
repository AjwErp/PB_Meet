@*---Language Tranlator--Localizer*@
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@model IEnumerable<Item>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutStore.cshtml";
}
@*----------Header Code for this Page--------------------------------Ended-------------------Header------------------*@

@*----------Body Code for this Page----------------------------------Start---------------------Body----------------*@
@*This HTML for ::SubLedger Index=view for account office::*@
<br />
<br />
<div class="border backgroundWhite">
    <div class="row">
        @*<div class="col-6">
                <h2 class="text-info">Accounts Sub Ledger List</h2>
            </div>*@
        <div class="col-12 text-right">
            <partial name="_CreateButtonPartialItem" />
        </div>
    </div>
    <div class="row">
        <div class="col-12 text-center">
            <h2 class="text-info">Store's Item List</h2>
        </div>
        @*<div class="col-6 text-right">
                <partial name="_CreateButtonPartial" />
            </div>*@
    </div>
    <br />
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        @Html.DisplayNameFor(m => m.ItemName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Category.CategoryName)
                    </th>
                    <th></th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => item.ItemName)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Category.CategoryName)
                        </td>
                        <td>
                            <partial name="_TableButtonPartialSubLedger" model="item.Id" />
                        </td>
                    </tr>
                }
            </table>
        }
        else
        {
            <p>No Item exists...</p>
        }
    </div>
</div>
