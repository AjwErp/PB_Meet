@*---Language Tranlator--Localizer*@
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@model IEnumerable<AJWNoticeBoardHrm>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutHrm.cshtml";
}

@*----------Header Code for this Page--------------------------------Ended-------------------Header------------------*@

@*----------Body Code for this Page----------------------------------Start---------------------Body----------------*@

@*---This Index HTML for ::Notice Board List HRM Office::---*@
<br />
<body>

    <div class="border backgroundWhiteBorder10Padding">
        <div class="row  text-light">
            <div class="col-12 text-right">
                <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> &nbsp;@Localizer["Create New Notice"] </a>
                @*<button class="btn btn-theme btn-print text-right " onclick="myFunction()"> Print <i class="fa fa-print" aria-hidden="true"></i></button>*@
            </div>
        </div>
        <div class="row">
            <div class="col-12 text-center">
                <img src="~/Image/1.png" alt="Image" width="100" height="100" />
                <h2 class="Title font-weight-bold"> @Localizer["AJW NOTICE BOARD LIST"]</h2>
            </div>
        </div>

        <br />
        <div>
            @if (Model.Count() > 0)
            {
                <table id="AjwNoticeBoard" class="table table-striped border SubH">
                    <thead>
                        <tr class="Subhdr">
                            <th>
                                @Localizer["ID#"]
                            </th>
                            <th>
                                @Localizer["Date"]
                            </th>
                            <th>
                                @Localizer["Title"]
                            </th>
                            <th>
                                @Localizer["Description"]
                            </th>
                            <th> </th>
                            <th>@Localizer["Action"]</th>

                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(m => item.Id)
                                </td>
                                <td>
                                    @Html.DisplayFor(m => item.Date)
                                </td>
                                <td>
                                    @Html.DisplayFor(m => item.Title)
                                </td>
                                <td>
                                    <textarea class="form-control"> @Html.DisplayFor(m => item.Description)</textarea>
                                </td>

                                <td>
                                    <partial name="_TableButtonPartial" model="item.Id" />
                                    @*<div class="btn-group">
                                            <button class="btn btn-primary btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                @Localizer["Action"]
                                            </button>
                                            <div class="dropdown-menu">
                                                <a class="btn btn-primary text-white" asp-action="Edit" asp-route-Id="@Model">
                                                    <i class="fas fa-edit"></i>
                                                </a>

                                                <a class="btn btn-success text-white" asp-action="Details" asp-route-Id="@Model">
                                                    <i class="fas fa-list-alt"></i>
                                                </a>

                                                <a class="btn btn-danger text-white" asp-action="Delete" asp-route-Id="@Model">
                                                    <i class="fas fa-trash-alt"></i>
                                                </a>
                                                <a class="dropdown-item" asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-trash-alt"></i> @Localizer["Download"]</a>
                                            </div>
                                        </div>*@
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>@Localizer["No Notice Exists..."]</p>
            }
        </div>
    </div>
</body>
<br />
<br />

@*----------Body Code for this Page----------------------------------Ended---------------------Body----------------*@

