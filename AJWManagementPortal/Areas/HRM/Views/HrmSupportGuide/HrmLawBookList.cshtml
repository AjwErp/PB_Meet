<br />
<body>
    <div class="container-fluid backgroundWhiteBorder10Padding">
        <div class="row">
            <div class="header col-sm-12">
                <a class="logo font-weight-bold font-weight-bolder">@Localizer["H.R.M Department Law Book List"]</a>
            </div>
            @*----------start-----general ledger  report lisst------------------*@
            <form class="col-sm-12">
                <hr />
                @*<div class="col-sm-12 Createbtn">
                        <a type="button" class="btn btn-primary" asp-controller="HrmSupportGuide" asp-area="Hrm" asp-action="HrmLawBook"><i class="fas fa-street-view"> @Localizer["View Current Laws of H.R.M Office"]</i> </a>
