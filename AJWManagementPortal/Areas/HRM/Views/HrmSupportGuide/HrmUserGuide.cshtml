@*This Controller for ::Account Office system user guide =view::*@
<br />
<body>
    <form class="tabled">
        <div class="container-fluid backgroundWhiteBorder10Padding AccountLUBook">
            <div class="col-md-12 col-sm-12">
                <div class="portlet light">
                    <div class="portlet-body">
                        <div class="table-responsive">
                            <div class="titleLaw">
                                <span class="">@localizer["H.R.M DEPARTMENT SYSTEM USER GUIDE"]</span>
                            </div>
                            <br />
                            <div class="PrintP">
                                <button class="btn btn-theme btn-print" onclick="myFunction()"> Print <i class="fa fa-print" aria-hidden="true"></i></button>
                            </div>
                            <table class="table table-bordered table-hover table-condensed table-sm SubH">
                                <thead>
                                    <tr class="">
                                        <th>@localizer["ID#"]</th>
                                        <th colspan="8">@localizer["Action's Description"]</th>
                                        <th colspan="4">@localizer["Function"]</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td> <span class="en">01</span> </td>
                                        <td colspan="8">
                                            @localizer["The HR Manager input assign email addrss,select related Department and input assign password then system display Accounts Dashboard"]
                                        </td>
                                        <td colspan="4">Login Page</td>

                                    </tr>
                                    <tr>
                                        <td> <span class="en">02</span> </td>
                                        <td colspan="8">
                                            @localizer["The HR Manager on dashboard view all important key values like Today Opening balance etc"]
                                        </td>
                                        <td colspan="4">H.R.M Dashboard</td>

                                    </tr>
                                    <tr>
                                        <td> <span class="en">03</span> </td>
                                        <td colspan="8">
                                            @localizer["There is a search-bar on the top of the dashboard page, by this HR manager search any query related to the HR department"]
                                        </td>
                                        <td colspan="4">H.R.M Search-Bar</td>
                                    </tr>
                                    <tr>
                                        <td> <span class="en">04</span> </td>
                                        <td colspan="8">
                                            @localizer["There is selector of language at the top right by this HR manager change current page language, as you want"]
                                        </td>
                                        <td colspan="4">Language Translator</td>
                                    </tr>
                                    <tr>
                                        <td> <span class="en">05</span> </td>
                                        <td colspan="8">
                                            @localizer["There is notification panel at the top right by this HR manager check all activity's notification"]
                                        </td>
                                        <td colspan="4">Notification Panel</td>
                                    </tr>
                                    <tr>
                                        <td> <span class="en">06</span> </td>
                                        <td colspan="8">
                                            @localizer["There is user profile section at the top right by this HR manager logout from system or check profile information"]
                                        </td>
                                        <td colspan="4">Profile</td>
                                    </tr>

                                    <tr>
                                        <td> <span class="en">07</span> </td>
                                        <td colspan="8">
                                            @localizer["There is X sign at the top left by this HR manager change the screen view(big/small)"]
                                        </td>
                                        <td colspan="4">X</td>
                                    </tr>
                                    <tr>
                                        <td> <span class="en">08</span> </td>
                                        <td colspan="8">
                                            @localizer["There is book sign at the top right side by this HR manager view updated notice"]
                                        </td>
                                        <td colspan="4">Notice Board</td>
                                    </tr>
                                    <tr>
                                        <td> <span class="en">09</span> </td>
                                        <td colspan="8">
                                            @localizer["There is 1st option in sidebar ':Dashboard:' by this HR manager go to H.R.M Dashboard Page  "]
                                        </td>
                                        <td colspan="4">Sidebar/Dashboard</td>
                                    </tr>
                                    <tr>
                                        <td> <span class="en">10</span> </td>
                                        <td colspan="8">
                                            @localizer["There is 2nd dropdown option in sidebar ':Accounts Support Guide:' by this HR manager select H.R.M User Guide for H.R.M department"]
                                        </td>
                                        <td colspan="4">Sidebar/H.R.M Support Guide</td>
                                    </tr>
                                    <tr>
                                        <td> <span class="en">11</span> </td>
                                        <td colspan="8">
                                            @localizer["There is 2nd dropdown option in sidebar ':H.R.M Law Book List:' by this HR manager check all laws about H.R.M department"]
                                        </td>
                                        <td colspan="4">Sidebar/H.R.M Law Book</td>

                                    </tr>
                                    <tr>
                                        <td> <span class="en">12</span> </td>
                                        <td colspan="8">
                                            @localizer["There is 3rd option in sidebar ':H.R.M Notice Board:' by this HR manager create new notice and perform all necessory operations"]
                                        </td>
                                        <td colspan="4">Sidebar/Notice Board</td>

                                    </tr>

                                    <tr>
                                        <td> <span class="en">13</span> </td>
                                        <td colspan="8">
                                            @localizer["There is 7th option in sidebar ':H.R.M Reports Repository:' by this HR manager view all success reports which sending by G.M Department"]
                                        </td>
                                        <td colspan="4">Sidebar/H.R.M Reports Repository</td>

                                    </tr>
                                    <tr>
                                        <td> <span class="en">14</span> </td>
                                        <td colspan="8">
                                            @localizer["There is 8th option in sidebar ':H.R.M Error Report List:' by this HR manager check all error reports which send by D.G.M office and perform all necessory operations"]
                                        </td>
                                        <td colspan="4">Sidebar/H.R.M Error Reports</td>

                                    </tr>
                                    <tr>
                                        <td> <span class="en">15</span> </td>
                                        <td colspan="8">
                                            @localizer["There is 9th option in sidebar ':H.R.M PDF Report:' by this HR manager select all downloaded reports and upload on H.R.M D.M.S department"]
                                        </td>
                                        <td colspan="4">Sidebar/H.R.M PDF Report: D.M.S</td>

                                    </tr>

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</body>

<!-- back to top button-->
<a id="button"></a>
