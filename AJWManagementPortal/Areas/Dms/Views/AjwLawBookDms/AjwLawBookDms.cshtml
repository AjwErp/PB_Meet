@model FileUploadViewModel
@*----------Header Code for this Page--------------------------------Start-------------------Header------------------*@
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
    ViewData["Title"] = "AccountsPdfReports";
    Layout = "~/Views/Shared/_LayoutDms.cshtml";
}
@*----------Header Code for this Page--------------------------------Ended-------------------Header------------------*@

@*----------Body Code for this Page----------------------------------Start---------------------Body----------------*@

@*::This HTML For AJW Law Book DMS List::*@
<br />
<body>
    <div class="container-fluid backgroundWhiteBorder ">
        <div class="row">
            <div class="header col-sm-12">

                <a class="logo font-weight-bold font-weight-bolder">@Localizer["AJW LAW BOOK D.M.S LIST"]</a>
            </div>

            @*--------------------Start------------Dgm Office Reports----------------------------------*@

            <form class="tabled col-sm-12 formDgmofficeReport">

                @*--------------------start------------Audit Reports PDF----------------------------------*@
                <hr />
                @*<div class="col-sm-12 Createbtn">
                        <a type="button" class="btn btn-primary " asp-area="Account" asp-controller="UploadAccountsPdfReport" asp-action="UploadPdfReport"><i class="fas fa-plus"> @Localizer["Create New D.G.M Office Audit Report"]</i> </a>
                    </div>
                    <br />
                    <div class="col-sm-12 text-center">
                        <a class="TitleDgmOfficeReport" colspan="10">@Localizer["AJW LAW BOOK D.M.S LIST"]</a>
                    </div>*@
                <br />
                   @if (Model.FilesOnDatabaseDms.Count == 0)
                   {
                    <caption>No File Exist....</caption>
                   }
                   else
                   {
                <table class="table table-bordered" id="AJwLawBookDms">
                    <thead>
                        <tr class="Subhdr">
                            <th>@Localizer["Actions"]</th>
                            <th>@Localizer["Created On"]</th>
                            <th>@Localizer["File Type"]</th>
                            <th>@Localizer["Department"]</th>
                            <th>@Localizer["Name"]</th>
                            <th>@Localizer["ID#"]</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var file in Model.FilesOnDatabaseDms)
                        { 
                        <tr class="SubH">
                            <td class="actionbtn">
                                <div class="btn-group">
                                    <button class="btn btn-primary btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        @Localizer["Action"]
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-list-alt"></i> @Localizer["View"]</a>
                                        <a class="dropdown-item" asp-area="Dms" asp-controller="AjwLawBookDms" asp-action="DeleteFileFromDatabase" asp-route-id="@file.Id"><i class="fas fa-trash-alt"></i> @Localizer["Delete"]</a>
                                        <a class="dropdown-item" asp-area="Dms" asp-controller="AjwLawBookDms" asp-action="DownloadFileFromDatabase" asp-route-id="@file.Id"><i class="fas fa-download"></i> @Localizer["Download"]</a>
                                    </div>
                                </div>
                            </td>
                            <td>@file.CreatedOn</td>
                            <td>@file.FileType</td>
                            <td>@file.Description </td>
                            <td>@file.Name  <i class="fas fa-file-pdf"></i> </td>
                            <td>@file.Id</td>
                        </tr>
                        }
                    </tbody>
                </table>
                   }
            </form>
            @*--------------------ended------------Audit Reports PDF----------------------------------*@
        </div>
    </div>
</body>
<a id="button"></a>


@*----------Body Code for this Page----------------------------------Ended---------------------Body----------------*@

@*----------JS for this Page-----------------------------------------Start---------------------JS----------------*@
@section scripts{
