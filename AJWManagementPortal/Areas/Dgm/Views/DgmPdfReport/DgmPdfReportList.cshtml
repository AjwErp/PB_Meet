@*----------Header Code for this Page--------------------------------Start-------------------Header------------------*@
@*---Language Tranlator--Localizer*@
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@model DgmFileUploadViewModel
@{
    ViewData["Title"] = "DgmPdfReportList";
    Layout = "~/Views/Shared/_LayoutDgm.cshtml";
}
@*----------Header Code for this Page--------------------------------Ended-------------------Header------------------*@

@*----------Body Code for this Page----------------------------------Start---------------------Body----------------*@

@*this HTML for DGM Office PDF file uploding List Pannel for DMS *@
<br />
<body>
    <div class="container-fluid backgroundWhiteBorder10Padding">
        <div class="row">
            <form class="tabled col-sm-12 SubH">

                <div class="topbtnlist col-sm-12">
                    @*<a class="logo font-weight-bold font-weight-bolder">*@
                    <div class="btn-group">
                        <a href="#DR"><button type="button" class="btn btn-outline-dark">Daily Reports</button></a>
                        <a href="#MR"><button type="button" class="btn btn-outline-dark">Monthly Reports</button></a>
                        <a href="#YR"><button type="button" class="btn btn-outline-dark">Yearly Reports</button></a>
                        <a href="#AR"><button type="button" class="btn btn-outline-dark">Audit Report</button></a>

                        @*<button type="button" class="btn btn-dark">Right</button>*@
                    </div>
                    @*</a>*@
                </div>
                <hr />
                <div class="header col-sm-12">
                    <a class="logo font-weight-bold">@Localizer["D.G.M PDF Reports List"]</a>
                </div>
                @*--------------------Start------------Daily Accounts Pdf Reports----------------------------------*@
                <hr />
                <hr />
                <div class="col-sm-12 text-right">
                    <a type="button" class="btn btn-primary" asp-area="Dgm" asp-controller="DgmPdfReport" asp-action="DgmDailyPdfReport"><i class="fas fa-plus"> @Localizer["Create New Daily Accounts Pdf Report"]</i> </a>
                </div>
                <br />
                <div class="col-sm-12 text-center">
                    <a class="TitlePdfReport" scope="col" id="DR" colspan="10">@Localizer["Daily D.G.M Pdf Report List-D.G.M Office"]</a>
                </div>
                <br />
                @if (Model.DgmFilesOnDatabase.Count == 0)
                {
                    <caption>System Note :No File Exist in Technical Staff Work Plan....</caption>
                }
                else
                {
                    <table class="table table-bordered" id="DPReport">
                        <thead>
                            <tr class="Subhdr SubH">
                                <th>@Localizer["Action"] </th>
                                <th>@Localizer["Created On"]</th>
                                <th>@Localizer["File Type"]</th>
                                <th>@Localizer["Department"]</th>
                                <th>@Localizer["Name"]</th>
                                <th>@Localizer["ID#"]</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var file in Model.DgmFilesOnDatabase)
                            {
                                <tr class="SubH">
                                    <td class="actionbtn">
                                        <div class="btn-group">
                                            <button class="btn btn-primary btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                @Localizer["Action"]
                                            </button>
                                            <div class="dropdown-menu">
                                                <a class="dropdown-item " asp-action="" asp-controller="" asp-area="Dgm"><i class="fas fa-list-alt"></i> @Localizer["View"]</a>
                                                <a class="dropdown-item " asp-area="Dgm" asp-controller="DgmPdfReport" asp-action="DeleteFileFromDatabase" asp-route-id="@file.Id"><i class="fas fa-trash-alt"></i> @Localizer["Delete"]</a>
                                                <a class="dropdown-item " asp-area="Dgm" asp-controller="DgmPdfReport" asp-action="DownloadFileFromDatabase" asp-route-id="@file.Id"><i class="fas fa-file-download"></i> @Localizer["Download"]</a>
                                                <a class="dropdown-item " asp-action="Dgm" asp-controller="" asp-area="Account"><i class="fas fa-upload"></i> @Localizer["Upload to DMS"]</a>
                                            </div>
                                        </div>
                                    </td>
                                    <td>@file.CreatedOn</td>
                                    <td>@file.FileType </td>
                                    <td>@file.Description </td>
                                    <td>@file.Name </td>
                                    <td>@file.Id</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                @*--------------------ended------------Daily Reports PDF----------------------------------*@
                @*--------------------sart------------Monthly Reports PDF----------------------------------*@

                <hr />
                <div class="col-sm-12 text-right">
                    <a type="button" class="btn btn-primary" asp-area="Dgm" asp-controller="DgmPdfReport" asp-action="DgmMonthlyPdfReport"><i class="fas fa-plus"> @Localizer["Create New Monthly Accounts Pdf Report"]</i> </a>
                </div>
                <br />
                <div class="col-sm-12 text-center">
                    <a class="TitlePdfReport" scope="col" id="MR" colspan="10">@Localizer["Monthly D.G.M Pdf Report List-D.G.M Office"]</a>
                </div>
                <br />

                <table class="table table-bordered" id="MPReport">
                    <thead>
                        <tr class="Subhdr SubH">
                            <th>@Localizer["Action"]</th>
                            <th>@Localizer["Date"]</th>
                            <th>@Localizer["Title"]</th>
                            <th>@Localizer["ID#"]</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class=" SubH">
                            <td class="actionbtn">
                                <div class="btn-group">
                                    <button class="btn btn-primary btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        @Localizer["Action"]
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item " asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-list-alt"></i> @Localizer["View"]</a>
                                        <a class="dropdown-item " asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-trash-alt"></i> @Localizer["Delete"]</a>
                                        <a class="dropdown-item " asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-download"></i> @Localizer["Download"]</a>
                                    </div>
                                </div>
                            </td>
                            <td>@*@item.ValueDate*@ </td>
                            <td>@Localizer["Monthly D.G.M Pdf Report"] <i class="fas fa-file-pdf"></i></td>
                            <td>@*@item.Id*@</td>
                        </tr>
                    </tbody>
                </table>

                @*--------------------ended------------Monthly Reports PDF----------------------------------*@
                @*--------------------start------------Yearly Reports PDF----------------------------------*@
                <hr />
                <div class="col-sm-12 text-right">
                    <a type="button" class="btn btn-primary" asp-area="Dgm" asp-controller="DgmPdfReport" asp-action="DgmYearlyPdfReport"><i class="fas fa-plus"> @Localizer["Create New Yearly Accounts Pdf Report"]</i> </a>
                </div>
                <br />
                <div class="col-sm-12 text-center">
                    <a class="TitlePdfReport" scope="col" id="YR" colspan="10">@Localizer["Yearly D.G.M Pdf Report List-D.G.M Office"]</a>
                </div>
                <br />
                <table class="table table-bordered" id="YPReport">
                    <thead>
                        <tr class="Subhdr SubH">
                            <th>@Localizer["Action"]</th>
                            <th>@Localizer["Date"]</th>
                            <th>@Localizer["Title"]</th>
                            <th>@Localizer["ID#"]</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="SubH">
                            <td class="actionbtn">
                                <div class="btn-group">
                                    <button class="btn btn-primary btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        @Localizer["Action"]
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item " asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-list-alt"></i> @Localizer["View"]</a>
                                        <a class="dropdown-item " asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-trash-alt"></i> @Localizer["Delete"]</a>
                                        <a class="dropdown-item " asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-download"></i> @Localizer["Download"]</a>
                                    </div>
                                </div>
                            </td>
                            <td>@*@item.ValueDate*@ </td>
                            <td>@Localizer["Yearly D.G.M Pdf Report"] <i class="fas fa-file-pdf"></i></td>
                            <td>@*@item.Id*@</td>
                        </tr>
                    </tbody>
                </table>
                @*--------------------ended------------Yearly Reports PDF----------------------------------*@
                @*--------------------start------------Audit Reports PDF----------------------------------*@
                <hr />
                <div class="col-sm-12 text-right">
                    <a type="button" class="btn btn-primary" asp-area="Account" asp-controller="AccountReportPdf" asp-action="AuditReportPdf"><i class="fas fa-plus"> @Localizer["Create New Audit Accounts Pdf Report"]</i> </a>
                </div>
                <br />
                <div class="col-sm-12 text-center">
                    <a class="TitlePdfReport" scope="col" id="AR" colspan="10">@Localizer["Audit D.G.M Pdf Report List-D.G.M Office"]</a>
                </div>
                <br />
                <table class="table table-bordered" id="APReport">
                    <thead>
                        <tr class="Subhdr SubH">
                            <th>@Localizer["Action"]</th>
                            <th>@Localizer["Date"]</th>
                            <th>@Localizer["Title"]</th>
                            <th>@Localizer["ID#"]</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="SubH">
                            <td class="actionbtn">
                                <div class="btn-group">
                                    <button class="btn btn-primary btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        @Localizer["Action"]
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item " asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-list-alt"></i> @Localizer["View"]</a>
                                        <a class="dropdown-item " asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-trash-alt"></i> @Localizer["Delete"]</a>
                                        <a class="dropdown-item " asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-download"></i> @Localizer["Download"]</a>
                                    </div>
                                </div>
                            </td>
                            <td>@*@item.ValueDate*@ </td>
                            <td>@Localizer["Audit D.G.M Pdf Report"] <i class="fas fa-file-pdf"></i></td>
                            <td>@*@item.Id*@</td>
                        </tr>
                    </tbody>
                </table>
            </form>
            @*--------------------ended------------Audit Reports PDF----------------------------------*@
        </div>
    </div>
</body>
<!-- back to top button-->
<a id="button"></a>

@*----------Body Code for this Page----------------------------------Ended---------------------Body----------------*@

