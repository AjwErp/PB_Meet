@*---Language Tranlator--Localizer*@
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = "DgmDailyPlanList";
    Layout = "~/Views/Shared/_LayoutDgm.cshtml";
}


@*----------Header Code for this Page--------------------------------Ended-------------------Header------------------*@

@*----------Body Code for this Page----------------------------------Start---------------------Body----------------*@

@*::This HTML for AJW Daily Plan List for DGM Office::*@
<br />
<body>
    <div class="container-fluid backgroundWhiteBorder10Padding">
        <div class="row">
            <div class="col-12">
                <h2 class="text-center font-weight-bold"><img src="~/Image/1.png" alt="Image" width="100" height="100" /><br />@Localizer["AJW Daily Plan-In/Out Sheet - D.G.M Office"]</h2>
            </div>
        </div>
        <br />
        <div>
            <table id="DailyPlan" class="table table-striped border">
                <thead>
                    <tr class="Subhdr SubH bg-secondary text-white">
                        <th>
                            @Localizer["Action"]
                        </th>
                        <th>
                            @Localizer["Signature"]
                        </th>
                        <th>
                            @Localizer["Description"]
                        </th>
                        <th>
                            @Localizer["DateTimeOut"]
                        </th>
                        <th>
                            @Localizer["DateTimeIn"]
                        </th>
                        <th>
                            @Localizer["Designation"]
                        </th>
                        <th>
                            @Localizer["Name"]
                        </th>
                        <th>
                            @Localizer["ID#"]
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="SubH">
                        <td>
                            <div class="actionbtn btn-group">
                                <button class="btn btn-primary btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    @Localizer["Action"]
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-list-alt"></i> @Localizer["View"]</a>
                                    <a class="dropdown-item" asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-edit"></i> @Localizer["Edit"]</a>
                                    <a class="dropdown-item" asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-trash-alt"></i> @Localizer["Delete"]</a>
                                    <a class="dropdown-item" asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-upload"></i> @Localizer["Send to G.M Office"]</a>
                                    <a class="dropdown-item" asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-upload"></i> @Localizer["Send to C.E.O Office"]</a>
                                    <a class="dropdown-item" asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-upload"></i> @Localizer["Upload to D.M.S"]</a>
                                </div>
                            </div>
                            @*<partial name="_TableButtonPartialDPIO" />*@
                        </td>

                        <td>
                            Ad Sajid
                        </td>
                        <td>
                            we will do all reports varify then send ot to the gm office
                        </td>
                        <td>
                            11:00pm 06-06-2021
                        </td>
                        <td>
                            11:00pm 06-06-2021
                        </td>
                        <td>
                            Purchase Officer
                        </td>
                        <td>
                            Ad Shab
                        </td>
                        <td>
                            001
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

</body>

<!-- back to top button-->
<a id="button"></a>

@*----------Body Code for this Page----------------------------------Ended---------------------Body----------------*@

