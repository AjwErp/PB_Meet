<body>


    <form asp-action="CreateMeezanVoucher">
        <table class="tabled table table-bordered">
            <thead>
                <tr>
                    <th class="bg-dark text-white" scope="col" colspan="10"><img src="~/Image/white.png" alt="Image" width="100" height="100" /><br />اے جے ڈبلیو ایگرو انڈسٹری</th>

                </tr>
                <tr>
                    <th class="bg-dark text-white" scope="col" colspan="10">ڈیلی میزان بینک ا واؤچر اکاؤنٹ آفس</th>

                </tr>
            </thead>

            <tbody>

                <tr>

                    <th class="text-left" colspan="4" scope="col">
                        <input asp-for="@Model.checkNumber" class="form-control" />
                        <span asp-validation-for="@Model.checkNumber" class="text-danger"></span>
                        :چیک نمبر
                    </th>
                    <th class="text-right" colspan="6" scope="col">
                        <input type="datetime-local" asp-for="@Model.dateTime" class="form-control" />
                        <span asp-validation-for="@Model.dateTime" class="text-danger"></span>
                        : تاریخ
                    </th>

                </tr>
                <tr>


                    <th colspan="7" class="text-right">
                        <input asp-for="@Model.amount" class="form-control" />
                        <span asp-validation-for="@Model.amount" class="text-danger"></span>
                    </th>
                    <th colspan="3" class="text-center">
                        رقم
                    </th>

                </tr>
                <tr>

                    <th colspan="7" class="text-center">
                        <input asp-for="@Model.purpose" class="form-control" />
                        <span asp-validation-for="@Model.purpose" class="text-danger"></span>
                    </th>
                    <th colspan="3" class="text-center">
                        پر پز
                    </th>

                </tr>
                <tr>

                    <th class="text-center bg-dark text-white" scope="col" colspan="2">باقی بیلنس</th>
                    <th class="text-center bg-dark text-white" scope="col" colspan="2">انکم ٹیکس کٹوتی</th>
                    <th class="text-center bg-dark text-white" scope="col" colspan="2">چیک کش</th>
                    <th class="text-center bg-dark text-white" scope="col" colspan="2">موجودہ بینک بیلنس</th>


                </tr>
                <tr>
                    @{ 
                        MeezanBankIEReport v1 = new MeezanBankIEReport();
                    }
                    @foreach(var details in ViewBag.Data)
                    {
                        v1.Balance += details.Balance;
                        v1.Cradit += details.Cradit;
                    }
                    <th scope="row" colspan="2">
                        @{ 
                        var bal =  v1.Balance - v1.Cradit;
                        }
                        @bal
                    </th>
                    <th scope="row" colspan="2">0</th>
                    <th scope="row" colspan="2">@v1.Cradit</th>
                    <th scope="row" colspan="2">
                        @v1.Balance
                                    </th>



                </tr>

                <tr>


                    <th colspan="7" class="text-right">
                        <input asp-for="@Model.description" class="form-control" />
                        <span asp-validation-for="@Model.description" class="text-danger"></span>
                    </th>
                    <th colspan="3" class="text-center">
                        تفصیل
                    </th>

                </tr>
                <tr>
                    <th>
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </th>
                </tr>
                <tr>
                    <th colspan="10" class="text-center bg-dark text-white">
                        <h3> سپپورٹنگ ڈوکمنٹس</h3>
                    </th>

                </tr>
                <tr>

                    <th class="text-center align-content-center bg-dark text-light" colspan="10">سلیکٹ  ڈوکمنٹس</th>

                </tr>
                <tr>

                    <th class="text-center align-content-center bg-dark text-white" colspan="10"> <input type="file" id="myFile" name="filename"></th>

                </tr>
                <tr class="bg-dark text-white text-left">

                    <td colspan="10">
                        <img src="~/Image/yok.jpg" class="img-rounded " alt="Cinque Terre" width="200" height="50">
                        <img src="~/Image/yok.jpg" class="img-rounded " alt="Cinque Terre" width="200" height="50">
