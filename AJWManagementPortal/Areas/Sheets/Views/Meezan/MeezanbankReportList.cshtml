@model IEnumerable<AJWManagementPortal.Models.MeezanBankIEReport>

@{
    ViewData["Title"] = "DailyMeezanbankReportList";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}

<table class="tabled table table-bordered">
    <tr>
        <th class="bg-white text-dark" scope="col" colspan="10">
            <a type="button" class="btn btn-black" asp-area="Account" asp-controller="Account" asp-action="Sheets">Back To Sheet Page </a>

            <a type="button" asp-action="Index" class="btn btn-info"><i class=""></i>+Create New Sheet </a>
        </th>
    </tr>
    <tr>
        <th class="bg-dark text-white" scope="col" colspan="10"><img src="~/Image/white.png" alt="Image" width="100" height="100" /><br />اے جے ڈبلیو ایگرو انڈسٹری</th>
    </tr>
    <tr>
        <th class="bg-dark text-white" scope="col" colspan="10">ڈیلی میزان بینک انکم خرچ رپورٹ لسٹ --اکاؤنٹ آفس</th>
    </tr>
</table>
<table class="tabled table table-bordered" id="DMR">
    <thead>
        <tr class="bg-dark text-white">
            <th class="text-left" colspan="10" scope="col"> <input type="datetime-local" id="birthdaytime" name="birthdaytime">  : تاریخ </th>
        </tr>
        <tr>
           <th class="text-center bg-dark text-white" scope="col" colspan="3">ڈسپلے لسٹ</th>
            <th class="text-center bg-dark text-white" scope="col" colspan="3">تاریخ</th>
            <th class="text-center bg-dark text-white" scope="col" colspan="3">ٹائٹل</th>
            <th class="text-center bg-dark text-white" scope="col">نمبر شمار</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>        
                <td scope="row" style="width:150px" colspan="3">
                    <div class="btn-group" role="group">
                        <a class="btn btn-primary text-white" asp-action="IndexByDate" asp-route-Id="@item.ValueDate.ToString("MM-dd-yyyy")" asp-route-hide="false">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a class="btn btn-success text-white" asp-action="IndexByDate" asp-route-Id="@item.ValueDate.ToString("MM-dd-yyyy")" asp-route-hide="true">
                            <i class="fas fa-list-alt"></i>
                        </a>
                        <a class="btn btn-danger text-white" asp-action="DeleteByDate" asp-route-Id="@item.ValueDate.ToString("MM-dd-yyyy")" asp-route-redirect="MeezanbankReportList">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    </div>
                </td>
                <td class="text-center bg-dark text-white" scope="row" colspan="3">@item.ValueDate</td>
                <td class="text-center bg-dark text-white" scope="row" colspan="3">ڈیلی میزان بینک انکم خرچ رپورٹ </td>
                <td class="text-center bg-dark text-white" scope="row">@item.Id</td>             
            </tr>
        }
        </tbody>
</table>

<style>
    .tabled {
        position: center;
        align-content: center;
        text-align: center;
        /*margin-left: -200px;*/
    }

    .signt {
        position: center;
        align-content: center;
        text-align: center;
        /*  margin-left: -120px;*/
    }
</style>
@section scripts{
    <script>
        $(document).ready(function () {
            $('#DMR').DataTable();
        });
    </script>

}