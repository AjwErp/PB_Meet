        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.transaction)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.tax)
        </dt>
        <dd class = "col-sm-10">
