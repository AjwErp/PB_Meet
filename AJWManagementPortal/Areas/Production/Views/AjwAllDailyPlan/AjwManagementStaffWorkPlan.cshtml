@*----------JS for this Page-----------------------------------------Start---------------------JS----------------*@
@section Scripts{
    <script>

        // DataTables with Add Row Functionality
        $("body").on("click", "#btnAdd", function () {

            //Reference the Name and Country TextBoxes.
     
            var txtdate = $("#txtdate");
            var txtsign = $("#txtsign");
            var txtDesc = $("#txtDesc");
            var txttimeout = $("#txttimeout");
            var txttimein = $("#txttimein");
            var txtdesig = $("#txtdesig");
            var txtname = $("#txtname");

            //Get the reference of the Table's TBODY element.
            var tBody = $("#tbllawbook > TBODY")[0];
            //Add Row.
            var row = tBody.insertRow(-1);

            //add date cell-txtdate
            cell = $(row.insertCell(-1));
            var btn0 = $("<input />");
            btn0.attr("type", "text");
            btn0.val(txtdate.val());
            cell.append(btn0);

            cell = $(row.insertCell(-1));
            var btn1 = $("<input />");
            btn1.attr("type", "text");
            btn1.val(txtsign.val());
            cell.append(btn1);

            cell = $(row.insertCell(-1));
            var btn2 = $("<input />");
            btn2.attr("type", "text");
            btn2.val(txtDesc.val());
            cell.append(btn2);

            //add Time out cell-txttimeout
            cell = $(row.insertCell(-1));
            var btn3 = $("<input />");
            btn3.attr("type", "text");
            btn3.val(txttimeout.val());
            cell.append(btn3);

            //add Time in cell-txttimein
            cell = $(row.insertCell(-1));
            var btn4 = $("<input />");
            btn4.attr("type", "text");
            btn4.val(txttimein.val());
            cell.append(btn4);

            //add designation cell-txtdesig
            cell = $(row.insertCell(-1));
            var btn5 = $("<input />");
            btn5.attr("type", "text");
            btn5.val(txtdesig.val());
            cell.append(btn5);
            //add name cell-txtname
            cell = $(row.insertCell(-1));
            var btn6 = $("<input />");
            btn6.attr("type", "text");
            btn6.val(txtname.val());
            cell.append(btn6);

            cell = $(row.insertCell(-1));
            //Remove Button cell.
            var btnRemove = $("<input />");
            btnRemove.attr("type", "button");
            btnRemove.attr("onclick", "Remove(this);");
            btnRemove.val("Remove");
            cell.append(btnRemove);
           
            //Clear the All TextBoxes of this sheet
            txtdate.val("");
            txtsign.val("");
            txtDesc.val("");
            txttimeout.val("");
            txttimein.val("");
            txtdesig.val("");
            txtname.val("");
            //txtsign.val("");
            //txtDesc.val("");
            //txttimeout.val("");
            //txttimein.val("");
            //txtdesig.val("");
            //txtname.val("");

        });

        function Remove(button) {
            //Determine the reference of the Row using the Button.
            var row = $(button).closest("TR");
            var name = $("TD", row).eq(0).html();
            if (confirm("Do you want to delete: " + name)) {
                //Get the reference of the Table.
                var table = $("#tbllawbook")[0];

                //Delete the Table row using it's Index.
                table.deleteRow(row[0].rowIndex);
            }
        };

        $("body").on("click", "#btnSave", function () {

            //Loop through the Table rows and build a JSON array.`
            var ManagementStaffWorkPlanArray = new Array();
            $("#tbllawbook TBODY TR").each(function () {
                var txtdate = $("#txtdate");
                var txtpmsign = $("#txtpmsign");
                var txtpmremarks = $("#txtpmremarks");
                var txtgmsign = $("#txtgmsign");
                var txtgmremarks = $("#txtgmremarks");
                var txtceosign = $("#txtceosign");
                var txtceoremarks = $("#txtceoremarks");
                var status = $("#status");
                var delrepo = $("#delrepo");
                var delpro = $("#delpro");
                var delgm = $("#delgm");
                var delceo = $("#delceo");
                var row = $(this);
                var ManagementStaffWorkPlan = {};
                ManagementStaffWorkPlan.DelRepoMP = delrepo.val();
                ManagementStaffWorkPlan.DelProductionMP = delpro.val();
                ManagementStaffWorkPlan.DelGmMP = delgm.val();
                ManagementStaffWorkPlan.DelCeoMP = delceo.val();
                ManagementStaffWorkPlan.MPDate = row.find("input[type='text']").eq(0).val();
                ManagementStaffWorkPlan.Signofficer = row.find("input[type='text']").eq(1).val();
                ManagementStaffWorkPlan.MPDescription = row.find("input[type='text']").eq(2).val();
                ManagementStaffWorkPlan.Timeout = row.find("input[type='text']").eq(3).val();
                ManagementStaffWorkPlan.Timein = row.find("input[type='text']").eq(4).val();
                ManagementStaffWorkPlan.MPDesignation = row.find("input[type='text']").eq(5).val();
                ManagementStaffWorkPlan.MPName = row.find("input[type='text']").eq(6).val();

                ManagementStaffWorkPlan.SignPManagerMP = txtpmsign.val();
                ManagementStaffWorkPlan.PManagerRemarksMP = txtpmremarks.val();
                ManagementStaffWorkPlan.SignGMMP = txtgmsign.val();
                ManagementStaffWorkPlan.GMRemarksMP = txtgmremarks.val();
                ManagementStaffWorkPlan.SignCeoMP = txtceosign.val();
                ManagementStaffWorkPlan.CeoRemarksMP = txtceoremarks.val();
                ManagementStaffWorkPlan.MPStatus = status.val();
                ManagementStaffWorkPlan.MPTitle = "A";

                ManagementStaffWorkPlanArray.push(ManagementStaffWorkPlan);
            });

            //Get
            var Date = $('#date').val();

            //Send the JSON array to Controller using AJAX.
            $.ajax({
                type: "POST",
                url: "/Production/AjwAllDailyPlan/InsertManagementStaffWorkPlans",
                data: { data: ManagementStaffWorkPlanArray, date: Date},
                success: function (r) {
                    alert(r + " record(s) inserted.");
                    window.location.replace("/Production/AjwAllDailyPlan/AjwManagementStaffWorkPlanList");
                }
            });
        });

    </script>

}
